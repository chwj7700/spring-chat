<?xml version="1.0" encoding= "UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.spring.mapper.RoomMapper">

	<resultMap type="com.spring.dto.RoomVO" id="RoomResultList">
		<result property="id" column="id" />
		<result property="subject" column="subject" />
		<result property="master" column="master" />
	</resultMap>

	<select id="selectRooms" resultMap="RoomResultList">
		SELECT id, subject, master FROM room
	</select>

	<select id="selectRoomsWithPaging" resultMap="RoomResultList" parameterType="int">
		<include refid="COMMON_PAGING_HEADER"/>
			SELECT id, subject, master FROM room order by id
		<include refid="COMMON_PAGING_TAIL"/>
	</select>

	<sql id="COMMON_PAGING_HEADER">
		SELECT paging.* FROM(
	</sql>

	<sql id="COMMON_PAGING_TAIL">
		) paging
		LIMIT #{length, jdbcType=INTEGER} OFFSET #{start, jdbcType=INTEGER}
	</sql>


	<select id="selectRoom" resultType="com.spring.dto.RoomVO" parameterType="int">
		SELECT id, subject, master FROM room WHERE id = #{id}
	</select>

	<select id="selectRoomTotalCount" resultType="int">
		SELECT count(*) FROM room
	</select>

	<delete id="DeleteRoom" parameterType="int">
		DELETE FROM room WHERE id = #{roomId}
	</delete>

	<insert id="insertRoom" parameterType="com.spring.dto.RoomVO">
		INSERT INTO room (id, subject, master) VALUES(#{id}, #{subject}, #{master})
	</insert>



</mapper>