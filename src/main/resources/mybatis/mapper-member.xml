<?xml version="1.0" encoding= "UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 
<mapper namespace="com.spring.mapper.MemberMapper">
 
    <resultMap type="com.spring.dto.MemberVO" id="TestResultList">
        <result property="id" column="id" />
        <result property="name" column="name" />
        <result property="pw" column="pw" />
    </resultMap>
 
    <select id="selectMember" resultType="com.spring.dto.MemberVO">
        SELECT id, name
          FROM member
         WHERE id = #{id}
           AND pw = #{pw}
    </select>
    
    <select id="idCheck" parameterType="String" resultType="String">
        SELECT id
          FROM member
         WHERE id = #{id}
    </select>
 
 
    <insert id="insertMember" parameterType="com.spring.dto.MemberVO">
        INSERT INTO member(id, pw, name) 
        VALUES(#{id}, #{pw}, #{name})
    </insert>
     
    
</mapper>